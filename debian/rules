#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export DEBUILD_DPKG_BUILDPACKAGE_OPTS="-I.svn -I.git"

.PHONY: override_dh_strip override_dh_shlibdeps

override_dh_strip:
	dh_strip -a --dbg-package=libcoil-dbg -Xrtc
	dh_strip -a --dbg-package=libopenrtm-aist-c++-dbg -Xcoil

override_dh_shlibdeps:
	LD_LIBRARY_PATH="debian/tmp/usr/lib:$$LD_LIBRARY_PATH" dh_shlibdeps --

%:
	dh  $@
